<% if session[:host] == @room.id %>

  <div id="player-index" class="row">
  	<%= erb :'rooms/player' %>
    <div id="sidebar" class="container">
      <div class="col-lg-4 col-lg-offset-9 col-md-4 col-md-offset-9 col-sm-4 col-sm-offset-9 col-xs-4 col-xs-offset-9">

        <div class="form-group">
          <div class="input-group">
            <input type="text" class="form-control" id="addPhone" name="phone_number" placeholder="Enter 10 digit number...">
            <span id="text-friend" class="input-group-btn"><button type="submit" class="btn btn-default">Text Friend</button></span>
          </div>
        </div>

        <%= erb :'rooms/_song_submit' %>
        <div id="success"></div>
        

      </div> 
    </div> 
  </div>

  <div class="song-name">
    <h3>Now Playing: <span id="song_name"></span></h3>
  </div>

<% else %>

  <div class="row">
    <div id="guest-wrapper" class="container">
      <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
        <%= erb :'rooms/_song_submit' %>
      </div>
    </div>
  </div>

<% end %>

